<h2>スケジュール新規作成</h2>

<%= form_for @myapp do |f| %>
    <table>
        <tr>
            <th><%= f.label :title ,"タイトル" %></th>
            <td><%= f.text_field :title %></td>
        </tr>
        <tr>
            <th><%= f.label :start ,"開始日" %></th>
            <td><%= f.text_field :start %></td>
        </tr>
        <tr>
            <th><%= f.label :finish ,"終了日" %></th>
            <td><%= f.text_field :finish %></td>
        </tr>
        <tr>
            <th><%= f.label :allday ,"終日" %></th>
            <td>
                <%= check_box_tag :check %>
                <%= label_tag :check, "終日頑張る？" %>
            </td>
        </tr>
        <tr>
            <th><%= f.label :memo ,"スケジュールメモ" %></th>
            <td><%= f.text_area :memo%></td>
        </tr>
    </table>
    <div>
        <ul>
            <li><%= f.submit "登録完了する"%></li>
            <li><%= link_to "ユーザー情報一覧に戻る", :myapps %></li>
        </ul>
    </div>
<% end %>